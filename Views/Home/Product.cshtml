<div class="container">
    <div class="row header">
        <h1 id="title">Add Product &nbsp;</h1>
        <h3><p id="description">Fill out the form below for improvement of freeCodeCamp!</p></h3>
    </div>
    <div class="row body">
        <form action="#" id="survey-form">
            <ul>

                <li>
                    <p class="left">
                        <label for="first_name" id="name-label">Product Name<span class="req">*</span></label>
                        <input type="text" name="first_name" placeholder="" id="name" required />
                    </p>
                    <p class="pull-right">
                        <label for="last_name">Product price<span class="req">*</span></label>
                        <input type="text" name="last_name" placeholder="" required />
                    </p>
                </li>
                <li>
                    <label for="comments">Product Description</label>
                    <textarea cols="46" rows="3" name="comments" placeholder=""></textarea>
                </li>
                <li>
                    <p>
                        <label for="email" id="email-label">Catogery <span class="req">*</span></label>
                    <select id="catogerySelect">
                        <option>Select </option>
                        </select>
                        @*<label for="email" id="email-label">Email <span class="req">*</span></label>
        <input type="email" name="email" placeholder="Salina.Akther@gmail.com" id="email" required />*@
                    </p>
                </li>
                <li>
                    <label  >Select Image <span class="req">*</span></label>
                    <input type="file" id="FileUpload1" />
                    <input type="button" id="btnUpload" value="Upload Files" />
                </li>


                <li style="text-align:center">
                    <button class="btn btn-submit" type="submit" id="submit">Submit</button>
                </li>

            </ul>
        </form>
    </div>
</div>

